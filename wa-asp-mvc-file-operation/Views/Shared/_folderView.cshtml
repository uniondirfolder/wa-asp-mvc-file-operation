@using System.Text
@model wa_asp_mvc_file_operation.Data.Models.ServerFile

<li class="list-group-item">
    <a href="@Url.Action("GoToFolder", "Home", new { folderName=@HttpServerUtility.UrlTokenEncode(Encoding.Unicode.GetBytes(@Model.Path)) })">
        <img src="/Content/Images/FolderIcon.png"
             alt="images" />
        <span>@Model.Name</span>
        <br />
    </a>
    <div class="btn-group navBtn" style="margin: 0">
        <button type="button"
                class="btn btn-primary navbar-btn navBtn"
                onclick="window.location.href = '@Url.Action("RemoveFolder", "Home", new {folderName = @HttpServerUtility.UrlTokenEncode(Encoding.Unicode.GetBytes(@Model.Path))})'"
                title="Видалити">
            <span class="glyphicon glyphicon glyphicon-trash"></span>
            <span>Видалити</span>
        </button>
        <button type="button"
                class="btn btn-primary navbar-btn navBtn"
                onclick="rename('@HttpServerUtility.UrlTokenEncode(Encoding.Unicode.GetBytes(@Model.Path))', '@Model.FileType');"
                title="Перемейнувати">
            <span class="glyphicon glyphicon glyphicon-pencil"></span>
            <span>Перемейнувати</span>
        </button>
        <button type="button"
                class="btn btn-primary navbar-btn navBtn"
                onclick="move('@HttpServerUtility.UrlTokenEncode(Encoding.Unicode.GetBytes(@Model.Path))', '@Model.FileType');"
                title="Перемістити">
            <span class="glyphicon glyphicon glyphicon-move"></span>
            <span>Перемістити</span>
        </button>
    </div>
</li>
