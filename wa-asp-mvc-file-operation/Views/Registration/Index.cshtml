@using wa_asp_mvc_file_operation.Data.Models

@{
    ViewBag.Title = "Реєстрація";
}

@model CloudUser

<div class="center">
    <h2>Реєстрація</h2>
    <br />
    @using (Html.BeginForm("Index", "Registration", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Name", "Им'я (nickname):")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Введіть им'я", required = "" })
        </div>
        <div class="form-group">
            @Html.Label("Login", "Логін:")
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Введіть логін", required = "" })
        </div>
        <div class="form-group">
            @Html.Label("Password", "Пароль:")
            @Html.PasswordFor(m => m.Passwords, new { @class = "form-control", placeholder = "Введіть пароль", required = "" })
        </div>

        <button type="submit" class="btn btn-default">Зареєструватися</button>
    }
</div>
